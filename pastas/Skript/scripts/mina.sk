#Regenerar o /minerar
on server start:
    set {MinerarFechado} to true
    wait 20 seconds
    make console execute command "/mv regen minerar"
    make console execute command "/mv confirm"
    wait 30 seconds
    set {MinerarFechado} to false
#/minerar fechado
on command "/mina":
